<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ded3b6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/titlesnape"
            android:gravity="center"
            android:padding="15dp"
            android:text="2048"
            android:textColor="#EEEEEE"
            android:textSize="37sp"
            android:textStyle="bold"
            android:elevation="0dp"
            android:shadowColor="#333333"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/titlesnape"
            android:gravity="center"
            android:padding="15dp"
            android:text="2048"
            android:textColor="#776E65"
            android:textSize="37sp"
            android:textStyle="bold"
            android:elevation="0dp"
            android:shadowColor="#333333"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            />

        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/snape"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/scoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textColor="#EEE4DA"
                android:textSize="22sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bestScoreLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/snape"
            android:padding="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bestScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best"
                android:textColor="#EEE4DA"
                android:textSize="22sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/bestScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <android.widget.Button
            android:id="@+id/menuButton"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:text="MENU"
            android:textSize="14sp"
            style="@style/ButtonStyle"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <android.widget.Button
            android:id="@+id/leaderboardButton"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:text="排行榜"
            android:textSize="14sp"
            android:layout_marginEnd="50dp"
            style="@style/ButtonStyle"
            android:gravity="center"/>

        <android.widget.Button
            android:id="@+id/undoButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="6dp"
            android:background="@drawable/button_with_shadow"
            android:gravity="center"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Join the numbers and get to the 2048 tile!"
        android:textSize="19sp"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:id="@+id/boardGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:background="@drawable/boardsnape"
        android:padding="8dp" />


</LinearLayout>
